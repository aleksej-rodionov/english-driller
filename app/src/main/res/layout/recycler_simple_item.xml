<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="30dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_full">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/btn_vocabulary">

            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="category_name"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <Switch
                android:id="@+id/btn_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_category_name"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:buttonTint="#FFFFFF"
                android:foregroundTint="#FFFFFF"
                android:switchPadding="10dp"
                android:text="on/off"
                android:textSize="14sp"
                android:thumbTint="@color/colorRed" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/btn_vocabulary"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/ic_list" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>