<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/drillerFragment">

    <fragment
        android:id="@+id/drillerFragment"
        android:name="space.rodionov.englishdriller.feature_driller.presentation.driller.DrillerFragment"
        android:label="fragment_driller"
        tools:layout="@layout/fragment_driller" >
        <action
            android:id="@+id/action_drillerFragment_to_collectionFragment"
            app:destination="@id/collectionFragment" />
        <action
            android:id="@+id/action_drillerFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/collectionFragment"
        android:name="space.rodionov.englishdriller.feature_driller.presentation.collection.CollectionFragment"
        android:label="fragment_collection"
        tools:layout="@layout/fragment_collection" >
        <action
            android:id="@+id/action_collectionFragment_to_wordlistFragment"
            app:destination="@id/wordlistFragment" />
    </fragment>
    <fragment
        android:id="@+id/wordlistFragment"
        android:name="space.rodionov.englishdriller.feature_driller.presentation.wordlist.WordlistFragment"
        android:label="fragment_wordlist"
        tools:layout="@layout/fragment_wordlist" >
        <argument
            android:name="category"
            app:argType="space.rodionov.englishdriller.feature_driller.domain.models.Category"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="space.rodionov.englishdriller.feature_driller.presentation.settings.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />
</navigation>