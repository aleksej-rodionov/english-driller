<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EnglishDriller" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryVariant">@color/colorBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorRed</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#80FFFFFF</item>
        <!-- Customize your theme here. -->

        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="DayTheme">
        <item name="toolbarBG">@color/transparentBlue</item>
        <item name="cardBG">@color/white</item>
        <item name="text1">@color/black95</item>
        <item name="text2">@color/grey</item>
        <item name="switchBtn">@color/colorRed</item>
        <item name="iconUnselected">@color/colorBlue</item>
        <item name="iconSelected">@color/colorRed</item>
        <item name="text3">@color/transparentWhite</item>
        <item name="bottomNavBG">@color/transparentWhite</item>
        <item name="commonBG">@color/transparent</item>
    </style>

    <style name="NightTheme">
        <item name="toolbarBG">@color/transparentGrey</item>
        <item name="cardBG">@color/transparentGrey</item>
        <item name="text1">@color/yellow</item>
        <item name="text2">@color/moonBlue</item>
        <item name="switchBtn">@color/green</item>
        <item name="iconUnselected">@color/moonBlue</item>
        <item name="iconSelected">@color/yellow</item>
        <item name="text3">@color/transparentWhite</item>
        <item name="bottomNavBG">@color/transparentGrey</item>
        <item name="commonBG">@color/transparentGrey</item>
    </style>
</resources>