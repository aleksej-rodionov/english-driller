<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PorosenokPetr" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="chipGroupStyle">@style/ChipStyleViolet</item>
        <item name="chipStyle">@style/ChipStyleViolet</item>
        <item name="chipStandaloneStyle">@style/ChipStyleViolet</item>
    </style>

    <style name="Theme.NavBarDay" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="statusBarForeground">@color/black</item>

    </style>

    <style name="Theme.NavBarNight" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/gray850</item>
        <item name="statusBarForeground">@color/white</item>
    </style>

    <style name="ImageViewCorners4">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSize">3%</item>
    </style>

    <style name="Bold20Black" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/sf_ui_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHint">@color/colorBeta</item>
    </style>

    <style name="ChipStyleViolet" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="checkedIcon">@null</item>
        <item name="chipIconEnabled">false</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
    </style>


    <style name="SuggestionStyle" parent="Theme.PorosenokPetr">
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListViewStyle</item>
    </style>

    <style name="DropDownListViewStyle">
        <item name="android:divider">@drawable/bg_divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="ModeLight">
        <item name="bg_main">@color/gray200</item>
        <item name="bg_beta">@color/white</item>
        <item name="bg_contrast">@color/gray400</item>
        <item name="text_main">@color/gray900</item>
        <item name="text_beta">@color/gray600</item>
        <item name="bg_accent_alpha">@color/violet</item>
        <item name="bg_accent_bravo">@color/gray800</item>
        <item name="bg_accent_charlie">@color/blueDull</item>
        <item name="bg_accent_delta">@color/purple_700</item>
    </style>

    <style name="ModeDark">
        <item name="bg_main">@color/gray900</item>
        <item name="bg_beta">@color/gray850</item>
        <item name="bg_contrast">@color/gray800</item>
        <item name="text_main">@color/gray100</item>
        <item name="text_beta">@color/gray600</item>
        <item name="bg_accent_alpha">@color/yellow</item>
        <item name="bg_accent_bravo">@color/violet</item>
        <item name="bg_accent_charlie">@color/yellow</item>
        <item name="bg_accent_delta">@color/moonBlue</item>
    </style>
</resources>





